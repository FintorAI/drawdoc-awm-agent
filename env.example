# Encompass API Configuration
ENCOMPASS_ACCESS_TOKEN=your_access_token_here
ENCOMPASS_API_BASE_URL=https://api.elliemae.com
ENCOMPASS_USERNAME=your_username
ENCOMPASS_PASSWORD=your_password
ENCOMPASS_CLIENT_ID=your_client_id
ENCOMPASS_CLIENT_SECRET=your_client_secret
ENCOMPASS_INSTANCE_ID=your_instance_id
ENCOMPASS_SUBJECT_USER_ID=your_subject_user_id

# LandingAI Configuration (for document extraction)
LANDINGAI_API_KEY=your_landingai_api_key

# DocRepo S3 Storage Configuration
# Per-client S3 document storage for UI file access
DOCREPO_AUTH_TOKEN=esfuse-token
DOCREPO_PUT_API_BASE=https://ekrhupxp1d.execute-api.us-west-1.amazonaws.com/prod
DOCREPO_GET_API_BASE=https://m49lxh6q5d.execute-api.us-west-1.amazonaws.com/prod
DOCREPO_CREATE_API_BASE=https://dnobbdlzyb.execute-api.us-west-1.amazonaws.com/prod

# Development Mode Configuration
# Set to "true" to use local development version of copilotagent
# Set to "false" (or omit) to use PyPI version
USE_LOCAL_COPILOTAGENT=false

# AI Debug Mode
# Set to "true" to see detailed AI model responses in logs
# Set to "false" (or omit) for normal logging
AI_DEBUG_MODE=false

# Preparation Agent - Write Safety
# CRITICAL: Set to "true" ONLY when you want to write to Encompass
# Default is "false" to protect production environments
# When false, all writes are simulated (dry run mode)
ENABLE_ENCOMPASS_WRITES=false

# Backend API Configuration
# Directory where run result files are stored
# Files are named: {loan_id}_{timestamp}_results.json
# Default: backend/output (relative to backend directory)
OUTPUT_DIR=./backend/output

# Backend Server Configuration
HOST=0.0.0.0
PORT=8000











